{
  "name": "action-template",
  "version": "1.0.0",
  "private": true,
  "description": "Github Action to install conda",
  "main": "dist/index.js",
  "scripts": {
    "test_build": "tsc",
    "watch_test_build": "tsc -w",
    "package": "ncc build src/index.ts -o dist",
    "build-compare-file": "ncc build src/index.ts -o compare",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "tslint src/*",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/s-weigand/github-action-template.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "author": "Sebastian Weigand",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/exec": "^1.0.4",
    "@actions/io": "^1.0.2",
    "@actions/tool-cache": "^1.5.5",
    "temp": "^0.9.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "@types/yargs": "15.0.5",
    "yargs": "15.4.1",
    "@types/node": "^14.0.27",
    "@types/temp": "^0.8.34",
    "@zeit/ncc": "^0.22.3",
    "jest": "^25.5.4",
    "jest-circus": "^26.1.0",
    "prettier": "^2.0.5",
    "ts-jest": "^25.5.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.9.6"
  }
}
