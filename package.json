{
  "name": "action-template",
  "version": "1.0.0",
  "private": true,
  "description": "Github Action to install conda",
  "main": "dist/index.js",
  "scripts": {
    "test_build": "tsc",
    "watch_test_build": "tsc -w",
    "package": "ncc build src/index.ts -o dist",
    "build-compare-file": "ncc build src/index.ts -o compare",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "tslint src/*",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/s-weigand/github-action-template.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "author": "Sebastian Weigand",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.2",
    "@actions/tool-cache": "^2.0.1",
    "@vercel/ncc": "^0.34.0",
    "temp": "^0.9.4"
  },
  "devDependencies": {
    "@types/jest": "^28.1.7",
    "@types/node": "^16.18.3",
    "@types/temp": "^0.9.2",
    "@types/yargs": "17.0.24",
    "jest": "^28.1.3",
    "jest-circus": "^29.6.4",
    "prettier": "^3.0.3",
    "ts-jest": "^28.0.8",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "5.2",
    "yargs": "17.7.2"
  }
}
